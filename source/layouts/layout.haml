    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= current_page.data.title || "One Glove"
    = stylesheet_link_tag 'foundation/app', 'foundation-icons', 'style', 'https://fonts.googleapis.com/css?family=Arvo', 'https://fonts.googleapis.com/css?family=Raleway'
